    "@distributed-systems/glob": "^3.0.0",
    "@distributed-systems/types": "^3.0.0"
  },
  "bin": {
    "section": "./dist/bin/run-npm.js"
  },
  "type": "module",
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^24.9.1",
    "ee-log": "^3.0.9",
